<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/lighter_black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextStyle.Header" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:color">@color/light_gray</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="TextStyle.Body" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:color">@color/gray</item>
        <item name="android:elegantTextHeight">true</item>
    </style>
</resources>